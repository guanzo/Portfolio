{
  "name": "portfolio",
  "description": "Website that showcases my work",
  "author": "Eric Guan",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -e src/client/main.js -o public/dist/build.js",
    "server": "nodemon src/server/app.js --ignore public/ --ignore src/client/",
    "dev": "npm-run-all --parallel watchify server",
    "build": "cross-env NODE_ENV=production browserify -g envify src/client/main.js | uglifyjs -c warnings=false -m > public/dist/build.js"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "d3": "^4.7.4",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "materialize-css": "^0.98.2",
    "smoothscroll-polyfill": "^0.3.5",
    "vue": "^2.0.1",
    "vue-router": "^2.5.2",
    "vue-visible": "^1.0.1",
    "vue-waypoint": "^2.4.0",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^1.0.6",
    "envify": "^3.4.1",
    "http-server": "^0.9.0",
    "less": "^2.7.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^2.1.2",
    "uglify-js": "^2.5.0",
    "vueify": "^9.1.0",
    "watchify": "^3.4.0"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  }
}
